---
import { NavLink } from "@components/nav/NavLink";

const destinationLinks = [
  {
    path: `${import.meta.env.BASE_URL}/destinations/moon`,
    text: "moon",
  },
  {
    path: `${import.meta.env.BASE_URL}/destinations/mars`,
    text: "mars",
  },
  {
    path: `${import.meta.env.BASE_URL}/destinations/europa`,
    text: "europa",
  },
  {
    path: `${import.meta.env.BASE_URL}/destinations/titan`,
    text: "titan",
  },
];
---

<nav class="xl:max-w-[290px]" aria-label="destination tab navigation">
  <ul class="flex justify-between items-center mt-6 mb-8 md:w-6/12 md:mx-auto xl:w-full">
    {
      destinationLinks.map((link) => (
        <li>
          <NavLink
            {...link} 
            client:visible 
            client:only="react"
            className="pb-3 border-b-[3px] border-b-transparent text-soft-blue hover:border-white hover:border-opacity-50 transition-colors"
            activeClassName="text-white border-b-[3px] border-b-white" />
        </li>
      ))
    }
  </ul>
</nav>
