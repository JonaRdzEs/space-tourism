---
import { NavLink } from "@components/nav/NavLink";

const destinationLinks = [
  {
    path: "/destinations/moon",
    text: "moon",
  },
  {
    path: "/destinations/mars",
    text: "mars",
  },
  {
    path: "/destinations/europa",
    text: "europa",
  },
  {
    path: "/destinations/titan",
    text: "titan",
  },
];
---

<nav class="xl:max-w-[290px]">
  <ul class="flex justify-between items-center mt-6 mb-8 md:w-6/12 md:mx-auto xl:w-full">
    {
      destinationLinks.map((link) => (
        <li>
          <NavLink client:visible client:only="react" {...link} activeClassName="border-b-4" />
        </li>
      ))
    }
  </ul>
</nav>
