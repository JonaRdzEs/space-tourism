---
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<section class="flex flex-col justify-center items-center gap-3 my-8">
  <h4 class="text-soft-blue font-sans uppercase text-sm">{title}</h4>
  <span class="text-white font-serif uppercase text-3xl">
    <slot />
  </span>
</section>

