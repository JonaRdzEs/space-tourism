---
import Layout from "@layouts/Layout.astro";
import SectionTitle from "@components/SectionTitle.astro";
import CurrentTech from "@components/technology/CurrentTech.astro";
import { TechImage } from "@components/technology/TechImage";
import data from "../data/data.json";

interface Props {
  destinationId: string;
}

const { destinationId } = Astro.props;
const techInfo = data.technology.find(
  (tech) => tech.destinationId === destinationId
)!;

const { images, name, description, page_desc } = techInfo;
---

<Layout
  title={name}
  description={page_desc}
  className="bg-[url('/space-tourism/backgrounds/technology-mobile.jpg')] lg:bg-[url('/space-tourism/backgrounds/technology-desktop.jpg')]"
>
  <SectionTitle leftText="03"> Space launch 101 </SectionTitle>
  <article class="xl:flex xl:justify-around xl:items-center xl:mt-7 xl:gap-20">
    <TechImage images={images} name={name} client:visible client:only="react" />
    <CurrentTech />
    <div class="xl:order-2 ">
      <h2 class="text-center flex-col xl:text-left">
        <span class="inline-block font-sans text-base uppercase text-soft-blue tracking-widest mb-1 md:mb-2">
          The terminology...
        </span>
        <br />
        <span class="block font-serif text-2xl uppercase md:text-[40px] xl:text-[56px] xl:leading-none xl:mt-3 xl:mb-4">{name}</span>
      </h2>
      <p class="font-body text-base text-soft-blue text-center mt-4 sm:w-8/12 sm:mx-auto xl:text-left xl:w-11/12 xl:ml-0 xl:text-lg">
        {description}
      </p>
    </div>
  </article>
</Layout>
