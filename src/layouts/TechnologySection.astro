---
import Layout from "@layouts/Layout.astro";
import SectionTitle from "@components/SectionTitle.astro";
import CurrentTech from "@components/technology/CurrentTech.astro";
import data from "../data/data.json";

interface Props {
  destinationId: string;
}

const { destinationId } = Astro.props;
const techInfo = data.technology.find(
  (tech) => tech.destinationId === destinationId
)!;

const { images, name, description } = techInfo;
---

<Layout
  title={name}
  description=""
  className="bg-[url('/backgrounds/technology-mobile.jpg')] lg:bg-[url('/backgrounds/technology-desktop.jpg')] bg-no-repeat bg-cover"
>
  <SectionTitle leftText="03"> Space launch 101 </SectionTitle>
  <article>
    <img
      class="w-full h-auto mx-auto mt-8 mb-6"
      src={images.landscape}
      alt={name}
    />
    <CurrentTech />
    <h2 class="text-center flex justify-center items-center gap-2 flex-col">
      <span class="font-sans font-base opacity-50 uppercase"
        >The terminology...</span
      >
      <span class="font-serif text-2xl uppercase">{name}</span>
    </h2>
    <p class="font-body text-base text-soft-blue text-center mt-4">
      {description}
    </p>
  </article>
</Layout>
